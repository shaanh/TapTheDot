<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/highscorebackground"
    tools:context="shoda.tapthedot.HighScores">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your High Scores"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="@dimen/abc_text_size_display_1_material" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:text="List1: 300"
        android:id="@+id/highScore1"
        android:textSize="28sp"
        android:layout_marginBottom="42dp"
        android:layout_above="@+id/highScore2"
        android:layout_alignStart="@+id/textView"
        android:layout_marginStart="49dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:text="List2: 300"
        android:id="@+id/highScore2"
        android:textSize="28sp"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/highScore3"
        android:layout_alignStart="@+id/highScore1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:text="List3: 300"
        android:id="@+id/highScore3"
        android:textSize="28sp"
        android:layout_marginBottom="44dp"
        android:layout_above="@+id/highScore4"
        android:layout_alignStart="@+id/highScore2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:text="List4: 300"
        android:id="@+id/highScore4"
        android:textSize="28sp"
        android:layout_above="@+id/highScore5"
        android:layout_alignStart="@+id/highScore3"
        android:layout_marginBottom="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#303030"
        android:text="List5: 300"
        android:id="@+id/highScore5"
        android:textSize="28sp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/highScore4"
        android:layout_marginBottom="37dp" />



</RelativeLayout>