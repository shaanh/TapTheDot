<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="shoda.tapthedot.HomeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Welcome to Tap The Dot!"
        android:textStyle="bold"
        android:textSize="28sp"
        android:id="@+id/textView"
        android:layout_centerHorizontal="true" />


    <ImageButton
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:text="Play"
        android:onClick="onClick"
        android:src="@drawable/startbutton2"
        android:id="@+id/imageButton"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="185dp"
        android:text="High Scores"
        android:onClick="highscores"
        android:src="@drawable/highscores2"
        android:id="@+id/highscores"
        android:layout_below="@+id/imageButton"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="How To Play"
        android:onClick="howToPlay"
        android:id="@+id/howToPlay"
        android:background="@color/secondary_text_default_material_dark"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>